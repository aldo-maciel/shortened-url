{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "types": [
            "webpack-env",
            "mocha",
            "jest"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ],
            "assets/*": [
                "src/assets/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
